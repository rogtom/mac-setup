{
  "terminal.integrated.defaultProfile.osx": "zsh",
  "workbench.colorTheme": "Seti Monokai: Original",
  "workbench.iconTheme": "vscode-icons",
  "workbench.sideBar.location": "right",
  "security.workspace.trust.untrustedFiles": "open",

  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[handlebars]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "liveServer.settings.donotShowInfoMsg": true,
  "redhat.telemetry.enabled": true,
  "projectManager.git.baseFolders": ["~/Developer"],

  "git.openRepositoryInParentFolders": "always",
  "files.autoSave": "onWindowChange",
  "diffEditor.ignoreTrimWhitespace": false,

  // "editor.mouseWheelZoom": true,

  "editor.detectIndentation": true,
  "editor.fontFamily": "'Hack Nerd Font'",
  "editor.fontLigatures": true,
  "editor.formatOnPaste": false,
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "editor.snippetSuggestions": "top",
  "editor.suggestSelection": "first",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.formatOnSave": true,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "git.autofetch": true,
  "markdown.preview.fontSize": 36,

  // FontSize Shortcuts settings

  "fontshortcuts.defaultFontSize": 15,
  "fontshortcuts.defaultTerminalFontSize": 15,
  "fontshortcuts.step": 1,
  "editor.lineHeight": 0,
  "editor.fontSize": 15,

  // Eslint settings

  "eslint.enable": true,
  "eslint.validate": ["vue", "react", "typescript", "html", "javascript"]
}
